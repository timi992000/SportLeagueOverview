<mah:MetroWindow x:Class="SportLeagueOverview.MainWindow"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:local="clr-namespace:SportLeagueOverview.Views"
                 mc:Ignorable="d"
                 Title="Liga Übersicht" Height="450" Width="800">
    <Grid>
        <mah:MetroTabControl>
            
            <mah:MetroTabItem Header="Mannschaft">
                <local:MannschaftView DataContext="{Binding MannschaftViewModel}"/>
            </mah:MetroTabItem>

            <mah:MetroTabItem Header="Spieler">
                <local:SpielerView DataContext="{Binding SpielerViewModel}"/>
            </mah:MetroTabItem>
            
            <mah:MetroTabItem Header="Spiele">
                <local:SpieleView DataContext="{Binding SpieleViewModel}"/>
            </mah:MetroTabItem>
            
            <mah:MetroTabItem Header="Statistiken">
                <local:StatistikenView DataContext="{Binding StatistikenViewModel}"/>
            </mah:MetroTabItem>
        </mah:MetroTabControl>
    </Grid>
</mah:MetroWindow>
